	return 0;
}

// try to grab write permission for the task with id task_id (pass own id in here)
// if can't gain permission, then exit
_queue_id OpenW(int task_id) {
	if (_mutex_try_lock(&write_mutex) == MQX_EOK) {
		return HANDLER_QUEUE;
	}
	else {
		return 0; // error
	}
}

